//prismaの使用上，配列で扱うのは無理

model StreetFighter6 {
  ID                Int          @id @default(autoincrement())
  characterName     String       // キャラ名
  numPadInput       String      // キー入力
  skillName         String         @unique // 技名
  commandImagePath  String // コマンド画像
  startUp           Int          // 前隙
  damage            Int          // ダメージ
  guardRecovery     Int          // ガード硬直
  recovery          Int          // 後隙
  hitParts          hitPartEnum  // 攻撃部位
}

enum hitPartEnum {
  High
  Middle
  Low
  Throw
  Bullet
}

